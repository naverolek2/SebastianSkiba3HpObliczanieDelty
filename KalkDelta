// See https://aka.ms/new-console-template for more information
// Console.WriteLine("Hello, World!");
main();
int main()
{
    double a, b, c;
    bool resParse1, resParse2, resParse3;
    Console.WriteLine("Podaj parametry według wzoru ogólnego F(x)= ax^2 + bx + c");
    Console.WriteLine("Podaj a:");
    resParse1 = double.TryParse(Console.ReadLine(), out a);
    Console.WriteLine("Podaj b:");
    resParse2 = double.TryParse(Console.ReadLine(), out b);
    Console.WriteLine("Podaj c:");
    resParse3 = double.TryParse(Console.ReadLine(), out c);

    double delta;

    delta = Math.Pow(b, 2) - 4 * a * c;

    Console.WriteLine("Wynik delty wynosi: " + delta);
    double deltaRoot = Math.Sqrt(delta);
    Console.WriteLine("Pierwiastek z delty wynosi: " + deltaRoot);
    double wynik1;
    double wynik2;
    double wynik3;

    if (resParse1 && resParse2 && resParse3)
    {

        if (delta < 0)
        {
            Console.WriteLine("Brak pierwiastków");
        }
        else if (delta > 0)
        {
            wynik1 = (((-1) * b - deltaRoot) / (2 * a));
            wynik2 = (((-1) * b + deltaRoot) / (2 * a));
            Console.WriteLine("Pierwszy pierwiastek wynosi: " + wynik1);
            Console.WriteLine("Drugi pierwiastek wynosi: " + wynik2);


        }
        else if (delta == 0)
        {
            wynik3 = (((-1) * b) / (2 * a));
            Console.WriteLine("Pierwiastek wynosi: " + wynik3);
        }

    }
    else
    {
        Console.WriteLine("Podałeś złą liczbę");
        Console.WriteLine("Podaj liczby jeszcze raz");
        main();
    }


    return 0;
}




